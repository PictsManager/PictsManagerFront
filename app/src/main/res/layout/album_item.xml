<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_album_image_view"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:src="@drawable/album_background" />

    <TextView
        android:id="@+id/item_album_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_album_image_view"
        android:layout_alignTop="@id/item_album_image_view"
        android:layout_alignEnd="@id/item_album_image_view"
        android:layout_alignBottom="@id/item_album_image_view"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FFFFFF" />

</RelativeLayout>